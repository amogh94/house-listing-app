  <tr>
    <th>ID</th>
    <th>Created By</th>
    <th>Interested House</th>
    <th>Updated</th>
  </tr>


    <% @interests.each do |interest| %>
      <tr>
        <td><%= interest.id %></td>
        <td><% creator = User.find(interest.user_id) %><%= creator.name %></td>
        <td><% house_location = House.find(interest.house_id) %><%= house_location.location %></td>
        <td><%= interest.updated_at %></td>
        <td><%= link_to 'Show', interest %></td>
        <td><%= link_to 'Edit', edit_interest_path(interest) %></td>
        <td><%= link_to 'Destroy', interest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

