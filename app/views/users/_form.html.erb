<%= form_with(model: user, local: true, id: "edit_user") do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="col-xs-12 col-sm-12 col-md-12">

    <div class="col-xs-4 col-sm-4 col-md-4">
      <div class="form-group">
        <label>Email</label><br />
        <input type="text" value="<%= @user.email %>" name="user[email]" class="form-control input-sm" placeholder="email">
      </div>
    </div>
    <div class="col-xs-4 col-sm-4 col-md-4">
      <div class="form-group">
        <label>Name</label><br />
        <input type="text" value="<%= @user.name %>" name="user[name]" class="form-control input-sm" placeholder="Name">
      </div>
    </div>

    <div class="col-xs-4 col-sm-4 col-md-4">
      <div class="form-group">
        <label>Password</label><br />
        <input type="text" value="<%= @user.password %>" name="user[password]" class="form-control input-sm" placeholder="password">
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-sm-12 col-md-12">
    <div class="col-xs-4 col-sm-4 col-md-4">
      <div class="form-group">
        <label>Role</label><br />
        <select class="form-control input-sm" name="user[Role]">
          <option value="1" <%= "selected" if @user.role==1 %> >House Hunter</option>
          <option value="2" <%= "selected" if @user.role==2 %> >Realtor</option>
          <option value="3" <%= "selected" if @user.role==3 %> >House Hunter and Realtor</option>
        </select>
      </div>
    </div>
    <div class="col-xs-4 col-sm-4 col-md-4">
      <div class="form-group">
        <label>Phone</label><br />
        <input type="number" value="<%= @user.phone %>" name="user[phone]" class="form-control input-sm" placeholder="Phone">
      </div>
    </div>
    <div class="col-xs-4 col-sm-4 col-md-4">
      <div class="form-group">
        <label>Preferred Contact Method</label><br />
        <select class="form-control input-sm" name="user[preferred_contact_method]">
          <option value="email" <%= "selected" if @user.preferred_contact_method == "email" %> >Email</option>
          <option value="phone" <%= "selected" if @user.preferred_contact_method == "phone" %> >Phone</option>
        </select>
      </div>
    </div>
  </div>
  <div class="col-xs-10 col-sm-10 col-md-10">
    <div class="col-xs-4 col-sm-4 col-md-4">
      <div class="field">
        <%= form.label :company_id %><br />
        <% options = options_from_collection_for_select(Company.all, 'id', 'name' ) %>
        <%= form.select :all_val,  options, {}, :style => "width:415px", :class =>"form-control input-sm" %>
      </div>
    </div>
  </div>


  <div class="col-xs-10 col-sm-10 col-md-4">
    <div class="actions">
      <%= form.submit %>
    </div>
  </div>


<% end %>
